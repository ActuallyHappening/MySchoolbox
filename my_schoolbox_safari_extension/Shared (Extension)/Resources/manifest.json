{
    "manifest_version": 3,
    "default_locale": "en",

    "name": "My Schoolbox",
    "description": "My Schoolbox safari web extension - customize your schoolbox and gain dedicated integrations",
    "version": "1.0",

    "icons": {
        "48": "images/icon-48.png",
        "96": "images/icon-96.png",
        "128": "images/icon-128.png",
        "256": "images/icon-256.png",
        "512": "images/icon-512.png"
    },

    "background": {
        "service_worker": "background.js"
    },

    "content_scripts": [{
        "js": [ "content.js" ],
        "matches": [ "https://schoolbox.emmanuel.qld.edu.au/*" ]
    }],

    "permissions": [ ]
}
